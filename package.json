{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "salesforce",
  "title": "Salesforce",
  "description": "Search for Salesforce objects like accounts and contacts.",
  "icon": "command-icon.png",
  "author": "sven",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search",
      "subtitle": "Search Salesforce objects",
      "description": "Search for Salesforce objects like accounts and contacts.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "domain",
      "title": "Domain",
      "description": "Your domain in <domain>.my.salesforce.com",
      "required": true
    },
    {
      "type": "textfield",
      "name": "clientId",
      "title": "Client ID",
      "description": "The app's client ID (see extension's documentation)",
      "required": true
    },
    {
      "type": "password",
      "name": "clientSecret",
      "title": "Client secret",
      "description": "The app's client secret (see extension's documentation)",
      "required": true
    },
    {
      "type": "textfield",
      "name": "username",
      "title": "Username",
      "description": "Your username",
      "required": true
    },
    {
      "type": "password",
      "name": "password",
      "title": "Password",
      "description": "Your password",
      "required": true
    },
    {
      "type": "password",
      "name": "securityToken",
      "title": "Security token",
      "description": "Your security token (see extension's documentation)",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.1",
    "@raycast/utils": "^1.3.1",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
